<!-- Header Container -->
<header id="header-container" class="fullwidth">
  <!-- Header -->
  <div id="header">
    <div class="container">
      <!-- Left Side Content -->
      <div class="left-side">
        <div id="logo"> <a href="{{ path('site_home_page') }}"><img src="{{ asset('img/site/logo.png') }}" width="208"
              height="70" alt="Zimboo"></a> </div>
        <div class="mmenu-trigger">
          <button class="hamburger hamburger--collapse" type="button"> <span class="hamburger-box"> <span
                class="hamburger-inner"></span> </span> </button>
        </div>

        <!-- Main Navigation -->
        <nav id="navigation" class="style-1">
          {% set allCategories = getCategories() %}
          <ul id="responsive">
            <li class="active navCategorie">
              <a class="parent">Choisissez votre Catégorie</a>
              <ul>
                {% for categorie in allCategories %}
                  <li>
                    <a href="{{ categorie.uri }}">{{ categorie.name }}</a>
                    {% if categorie.submenus|length != 0 %}
                      <ul>
                        {% for submenu in categorie.submenus %}
                          <li>
                            <a href="{{ submenu.uri }}">{{ submenu.name }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </li>
                {% endfor %}
              </ul>
            </li>
            {% if app.user %}
              <li class="visible-xs"><a class="{{ app.request.get('_route') == 'users_profile' ? 'current' : '' }}" href="{{ path('users_profile') }}"><i class="sl sl-icon-user"></i> Mon profile</a></li>
              <li class="visible-xs"><a class="{{ app.request.get('_route') == 'users_submit_announcement' ? 'current' : '' }}" href="{{ path('users_submit_announcement') }}"><i class="sl sl-icon-star"></i> Ajouter une annonce</a></li>
              <li class="visible-xs"><a class="{{ app.request.get('_route') == 'api_users_submit_announcement_pictures' ? 'current' : '' }}" href="{{ path('users_submit_announcement') }}"><i class="sl sl-icon-docs"></i> Ajouter une publicité</a></li>
              <li class="visible-xs"><a class="{{ app.request.get('_route') == 'users_my_history' ? 'current' : '' }}" href="{{ path('users_my_history') }}"><i class="sl sl-icon-action-redo"></i> Historique</a></li>
              <li class="visible-xs"><a class="{{ app.request.get('_route') == '' ? 'current' : '' }}" href="{{ path('users_profile') }}"><i class="sl sl-icon-lock"></i> Chenger de MDP</a></li>
              <li class="visible-xs"><a href="{{ path('app_logout') }}"><i class="sl sl-icon-power"></i> Deconnection</a></li>
            {% else %}
            <li class="visible-xs"><a href="{{ path('app_login') }}" class="popup-with-zoom-anim log-in-button sign-in">
                <i class="icon-line-awesome-user"></i> <span>Se connecter</span></a></li>
            {% endif %}
          </ul>

        </nav>
        <!-- Main Navigation -->

        <div class="clearfix"></div>
      </div>
      <!-- Left Side Content / End -->

      <!-- Right Side Content / End -->
      <div class="right-side">
        <div class="header-widget">
          {% if app.user %}

          <div class="user-menu">
            <div class="user-name"><span><img src="{{ asset('img/logo/') }}{{ app.user.Picture ? app.user.Picture : 'profile.png' }}" alt=""></span>
              <div class="user-name-title">{{ app.user.Name }}!</div>
            </div>
            <ul>
              <li><a class="{{ app.request.get('_route') == 'users_profile' ? 'current' : '' }}" href="{{ path('users_profile') }}"><i class="sl sl-icon-user"></i> Mon profile</a></li>
              <li><a class="{{ app.request.get('_route') == 'users_submit_announcement' ? 'current' : '' }}" href="{{ path('users_submit_announcement') }}"><i class="sl sl-icon-star"></i> Ajouter une annonce</a></li>
              <li><a class="{{ app.request.get('_route') == 'api_users_submit_announcement_pictures' ? 'current' : '' }}" href="{{ path('users_submit_announcement') }}"><i class="sl sl-icon-docs"></i> Ajouter une publicité</a></li>
              <li><a class="{{ app.request.get('_route') == 'users_my_history' ? 'current' : '' }}" href="{{ path('users_my_history') }}"><i class="sl sl-icon-action-redo"></i> Historique</a></li>
              <li><a class="{{ app.request.get('_route') == 'security_edit' ? 'current' : '' }}" href="{{ path('security_edit') }}"><i class="sl sl-icon-lock"></i> Chenger de MDP</a></li>
              <li><a href="{{ path('app_logout') }}"><i class="sl sl-icon-power"></i> Deconnection</a></li>
            </ul>
          </div>
          {% else %}

          <a href="#utf-signin-dialog-block" class="popup-with-zoom-anim log-in-button sign-in">
            <i class="icon-line-awesome-user"></i> <span>Se connecter</span></a>
          {% endif %}
          <a href="add-new-property.html" class="button border-success"><i class="icon-feather-plus-circle"></i><span>Publier</span></a>


        </div>
      </div>
      <!-- Right Side Content / End -->
    </div>
  </div>
  <!-- Header / End -->
</header>
<div class="clearfix"></div>
<!-- Header Container / End -->
