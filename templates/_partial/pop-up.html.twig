<!-- Sign In Popup -->
<div id="utf-signin-dialog-block" class="zoom-anim-dialog mfp-hide dialog-with-tabs">
    <div class="utf-signin-form-part">
        <ul class="utf-popup-tabs-nav-item">
            <li><a href="#login">Se connecter</a></li>
            <li><a href="#register">Register</a></li>
        </ul>
        <div class="utf-popup-container-part-tabs">
            <!-- Login -->
            <div class="utf-popup-tab-content-item" id="login">
                <div class="utf-welcome-text-item">
                    <h3>Logez vous </h3>
                    <span>Don't Have an Account? <a href="#" class="register-tab">Sign Up!</a></span>
                </div>
                <form action="{{ path('app_login') }}" method="post" id="login-form">
                    <div class="utf-no-border">
                        <input type="email" value="" name="email" id="inputEmail" placeholder="Votre Email de connection" class="input-text" autocomplete="email" required="" autofocus="">
                    </div>
                    <div class="utf-no-border">
                        <input type="password" name="password" id="inputPassword" class="input-text" placeholder="Mots de passe" autocomplete="current-password" required="">
                    </div>
                    <div class="checkbox margin-top-0">
                        <input type="checkbox" id="two-step">
                        <label for="two-step"><span class="checkbox-icon"></span> Se souvenir de moi</label>
                    </div>
                    <a href="forgot_password.html" class="forgot-password">Mot fr pazsse publmier?</a>
                </form>
                <button class="button full-width utf-button-sliding-icon ripple-effect" type="submit"
                    form="login-form">Log In <i class="icon-feather-chevrons-right"></i></button>
                <div class="utf-social-login-separator-item"><span>Or Login in With</span></div>
                <div class="utf-social-login-buttons-block">
                    <button class="facebook-login ripple-effect"><i class="icon-brand-facebook-f"></i> Facebook</button>
                    <button class="google-login ripple-effect"><i class="icon-brand-google"></i> Google</button>
                    <button class="twitter-login ripple-effect"><i class="icon-brand-twitter"></i> Twitter</button>
                </div>
            </div>

            <!-- Register -->
            <div class="utf-popup-tab-content-item" id="register">
                <div class="utf-welcome-text-item">
                    <h3>Creer votre compte!</h3>
                    <span>Don't Have an Account? <a href="#" class="register-tab">Sign Up!</a></span>
                </div>
                <form action="{{ path('app_register') }}" method="post" id="utf-register-account-form">
                    <div class="utf-no-border">
                        <input type="tel" id="registration_form_PhoneNumber" name="registration_form[PhoneNumber]" required="required" class="input-text" placeholder="+41 00 000 00 00">
                    </div>
                    <div class="utf-no-border">
                        <input type="email" id="registration_form_email" name="registration_form[email]" required="required" class="input-text" placeholder="EntrÃ© votre Email">
                    </div>
                    <div class="utf-no-border">
                        <input type="password" id="registration_form_plainPassword" name="registration_form[plainPassword]" required="required" autocomplete="new-password" class="input-text" placeholder="Votre mot de passe">
                    </div>
                    <div class="utf-no-border">
                        <input class="input-text" type="password" name="password" placeholder="repetez votre MDP" id="repeat_password">
                    </div>
                    <div class="checkbox margin-top-0">
                        <input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" required="required" value="1">
                        <label for="registration_form_agreeTerms"><span class="checkbox-icon"></span> By Registering You Confirm That You
                            Accept <a href="#">Terms & Conditions</a> and <a href="#">Privacy Policy</a></label>
                    </div>
                </form>
                <button class="margin-top-10 button full-width utf-button-sliding-icon ripple-effect" type="submit"
                    form="utf-register-account-form">Register <i class="icon-feather-chevrons-right"></i></button>
            </div>
        </div>
    </div>
</div>
<!-- Sign In Popup / End -->