<!-- Sign In Popup -->
<div id="utf-signin-dialog-block" class="zoom-anim-dialog mfp-hide dialog-with-tabs">
    <div class="utf-signin-form-part">
        <ul class="utf-popup-tabs-nav-item">
            <li><a href="#login">Se connecter</a></li>
            <li><a href="#register">Register</a></li>
        </ul>
        <div class="utf-popup-container-part-tabs">
            <!-- Login -->
            <div class="utf-popup-tab-content-item" id="login">
                <div class="utf-welcome-text-item">
                    <h3>Bienvenu sur zimboo.ch</h3>
                    <span>Vous n'avez pas d'acompte? <a href="#" class="register-tab">Créer un compte</a></span>
                </div>
                <form action="{{ path('app_login') }}" method="post" id="login-form">
                    <div class="utf-no-border">
                        <input type="email" value="" name="email" id="inputEmail" placeholder="Votre Email" class="input-text" autocomplete="email" required="" autofocus="">
                    </div>
                    <div class="utf-no-border">
                        <input type="password" name="password" id="inputPassword" class="input-text" placeholder="Mot de passe" autocomplete="current-password" required="">
                    </div>
                    <div class="checkbox margin-top-0">
                        <input type="checkbox" id="two-step">
                        <label for="two-step"><span class="checkbox-icon"></span> Se souvenir de moi</label>
                    </div>
                    <a href="{{ path('app_forgot_password_request') }}" class="forgot-password">Mot de passe oublier?</a>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="button full-width utf-button-sliding-icon ripple-effect" type="submit"
                            form="login-form">Log In <i class="icon-feather-chevrons-right"></i></button>
                </form>

                <div class="utf-social-login-separator-item"><span>CONNEXION AVEC</span></div>
                <div class="utf-social-login-buttons-block">
                    <button class="facebook-login ripple-effect"><i class="icon-brand-facebook-f"></i> Facebook</button>
                    <button onclick="location.href='/connect/google'" class="google-login ripple-effect"><i class="icon-brand-google"></i> Google</button>
                    <button class="twitter-login ripple-effect"><i class="icon-brand-twitter"></i> Twitter</button>
                </div>
            </div>

            <!-- Register -->
            <div class="utf-popup-tab-content-item" id="register">
                <div class="utf-welcome-text-item">
                    <h3>Créer votre compte</h3>
                    <span>J’ai déjà un compte ? <a href="#" class="register-tab">Se connecter!</a></span>
                </div>
                {{ render(controller(
                    'App\\Controller\\Authenticator\\RegistrationController::loadRegisterForm'
                )) }}

            </div>
        </div>
    </div>
</div>
<!-- Sign In Popup / End -->