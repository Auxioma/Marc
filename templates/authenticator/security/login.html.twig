<!-- Contact -->
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 margin-top-25">
      <div class="my-account">
        <div class="tabs-container">
          <!-- Login -->
          <div class="utf-welcome-text-item">
            <h3>Bienvenu sur zimboo.ch</h3>
            <span>Vous n'avez pas d'acompte? <a href="{{ path('app_register') }}">Créer un compte</a></span>
          </div>
          <form method="post" class="login">
            <div class="form-row form-row-wide">
              <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Votre Email"
                class="input-text" autocomplete="email" required autofocus>
            </div>
            <div class="form-row form-row-wide">
              <input type="password" name="password" id="inputPassword" class="input-text" placeholder="Mot de passe"
                autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="form-row">
              <div class="checkbox margin-top-10 margin-bottom-10">
                <input type="checkbox" name="_remember_me" id="two-step">
                <label for="two-step"><span class="checkbox-icon"></span> Se rappeler de moi</label>
              </div>
              <a class="lost_password" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
            </div>
            <div class="form-row text-center">
              <input type="submit" class="button border margin-top-10" name="login" value="Connexion" />
            </div>
            <div class="utf-social-login-separator-item"><span>CONNEXION AVEC</span></div>
            <div class="utf-social-login-buttons-block">
              <button class="button social-login via-twitter"><i class="icon-brand-facebook-f"></i> Facebook</button>
              <button onclick="location.href='/connect/google'" class="button social-login via-gplus"><i class="icon-brand-google"></i> Google</button>
              <button class="button social-login via-facebook"><i class="icon-brand-twitter"></i> Twitter</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Container / End -->

