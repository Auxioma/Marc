{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

<!-- Titlebar -->
<div class="parallax titlebar" data-background="images/listings-parallax.jpg" data-color="rgba(48, 48, 48, 1)"
  data-color-opacity="0.8" data-img-width="800" data-img-height="505">
  <div id="titlebar">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2>My Profile</h2>
          <!-- Breadcrumbs -->
          <nav id="breadcrumbs">
            <ul>
              <li><a href="index.html">Home</a></li>
              <li>My Profile</li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Content -->
<div class="container">
  <div class="row">
    <!-- Widget -->
    {% include 'users/_partial/menu.html.twig' %}
    <div class="col-md-9">
      {% for message in app.flashes('ProfileMiseAJour') %}
      <div class="notification warning closeable">
        <p>{{ message }}</p>
        <a class="close" href="#"></a> </div>
      </div>
      {% endfor %}
      <div class="utf-user-profile-item">
        <div class="utf-submit-page-inner-box">
          <h3>Mon activité</h3>
          <div class="content with-padding">
            <div class="col-md-6">
              <label>Votre catégorie</label>
              <input value="John Williams" type="text">
            </div>
            <div class="col-md-6">
              <label>Votre sous catégorie</label>
              <input value="John Williams" type="text">
            </div>
          </div>
        </div>
        <div class="utf-user-profile-item">
          <div class="utf-submit-page-inner-box">
            <h3>Mes information</h3>
            <div class="content with-padding">
              <div class="row">

                <div class="col-md-6">
                  <div class="col-md-12">
                    <label>Nom</label>
                    <input value="{{ Utilisateurs.Name }}" disabled type="text">
                  </div>
                  <div class="col-md-12">
                    <label>Prénom</label>
                    <input value="{{ Utilisateurs.FirstName }}" disabled type="text">
                  </div>
                  <div class="col-md-12">
                    <label>Entreprise</label>
                    <input value="{{ Utilisateurs.Compagny }}" disabled type="text">
                  </div>
                  <div class="col-md-12">
                    <label>Mon site internet</label>
                    <input value="{{ Utilisateurs.Url }}" disabled type="text">
                  </div>
                </div>
                <div class="col-md-6">

                  <div class="col-md-12">
                    <label>Localisation</label>
                    <div id="map"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="utf-submit-page-inner-box">
            <h3>Horaire d'ouverture</h3>
            <div class="content with-padding">
              <div class="row">
                <div class="col-12">
                  <div class="col-md-6">
                    Lundi: {% if Utilisateurs.OpenHours.LundiMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.LundiMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.LundiMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.LundiAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.LundiAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à {{
                    Utilisateurs.OpenHours.LundiAPMFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    <br>
                    Mardi: {% if Utilisateurs.OpenHours.MardiMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.MardiMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.MardiMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.MardiAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.MardiAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à {{
                    Utilisateurs.OpenHours.MardiAPMFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    <br>
                    Merdredi: {% if Utilisateurs.OpenHours.MercrediMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.MercrediMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }}
                    à
                    {{ Utilisateurs.OpenHours.MercrediMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.MercrediAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.MercrediAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.MercrediAPMFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    <br>
                    Jeudi: {% if Utilisateurs.OpenHours.JeudiMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.JeudiMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.JeudiMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.JeudiAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.JeudiAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à {{
                    Utilisateurs.OpenHours.JeudiAPMFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    <br>
                    Vendredi: {% if Utilisateurs.OpenHours.VendrediMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.VendrediMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }}
                    à
                    {{ Utilisateurs.OpenHours.VendrediMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.VendrediAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.VendrediAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
