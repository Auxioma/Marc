                    {% endif %}
                    <br>
                    Samedi: {% if Utilisateurs.OpenHours.SamediMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.SamediMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.SamediMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.SamediAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.SamediAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.SamediAPMFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    <br>
                    Dimanche: {% if Utilisateurs.OpenHours.DimancheMatinOuverture[0] != '' %}
                    {{ Utilisateurs.OpenHours.DimancheMatinOuverture[0]|format_datetime('none', 'short', locale='fr') }}
                    à
                    {{ Utilisateurs.OpenHours.DimancheMidiFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                    {% if Utilisateurs.OpenHours.DimancheAPMOuverture[0] != '' %} et de
                    {{ Utilisateurs.OpenHours.DimancheAPMOuverture[0]|format_datetime('none', 'short', locale='fr') }} à
                    {{
                    Utilisateurs.OpenHours.DimancheAPMFermeture[0]|format_datetime('none', 'short', locale='fr') }}
                    {% endif %}
                  </div>
                </div>
              </div>

            </div>
          </div>
          <div class="utf-submit-page-inner-box">
            <h3>{% trans %}Service de livraison{% endtrans %}</h3>
            <div class="content with-padding">
              <div class="col-md-6">
                <label><i class="icon-brand-facebook"></i> huber-eat.ch</label>
                <input value="https://www.facebook.com" type="text">
              </div>
              <div class="col-md-6">
                <label><i class="icon-brand-twitter"></i> est.ch</label>
                <input value="https://www.twitter.com" type="text">
              </div>
              <div class="col-md-6">
                <label><i class="icon-brand-linkedin"></i> smood.ch</label>
                <input value="https://www.linkedin.com" type="text">
              </div>
              <div class="col-md-6">
                <label><i class="icon-brand-google"></i> deindeal.ch</label>
                <input value="https://www.google.com" type="text">
              </div>
              <div class="col-md-6">
                <label><i class="icon-brand-pinterest"></i> J'ai un service de livraison</label>
                <input value="https://www.pinterest.com" type="text">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <button class="utf-centered-button button margin-top-0 margin-bottom-20">Save Changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {% endblock %}
  {% block javascript %}

  <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js"></script>
  <script type="text/javascript">
    var lon = {{ Utilisateurs.Longitude }};
    var lat = {{ Utilisateurs.Latitude }};
    var macarte = null;
    function initMap() {
      macarte = L.map('map').setView([lat, lon], 11);
      L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
        attribution: 'données © <a href="//osm.org/copyright">OpenStreetMap</a>/ODbL - rendu <a href="//openstreetmap.fr">OSM France</a>',
        minZoom: 18,
        maxZoom: 18
      }).addTo(macarte);
      var marker = L.marker([lat, lon]).addTo(macarte);
      marker.bindPopup("{{ Utilisateurs.Compagny }} <br> {{ Utilisateurs.Address }} {{ Utilisateurs.CodePost }} {{ Utilisateurs.City }} ");
    }
    window.onload = function () {
      initMap();
    };
  </script>
  {% endblock %}
  {% block css %}
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
    integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
    crossorigin="" />
  <style>
    #map {
      height: 388px;
    }
  </style>
  {% endblock %}